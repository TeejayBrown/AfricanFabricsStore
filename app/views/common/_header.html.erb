<header class="header">
  <br>
  <div class="container">
  <div class="notification is-transparent">
  <nav class="level">
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "Home", root_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "Products", products_index_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "New", new_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "On Sale", sale_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "Categories", product_categories_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "About Us", about_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "Contact Us", contact_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">

      <%= form_with(url: products_index_path, method: :get, local: true) do%>
        <div class="field has-addons">
          <p class="control">
            <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search For Products')%>
          </p>
          <p class="select is-primary control">
            <%# <%= select_tag :country, options_from_collection_for_select(Country.order(:name), :name, :name), class: "select", prompt: " All Categories " %>
          </p>
          <br>
          <p class="ml-3 control">
            <button class="button is-success">
              Search
            </button>
          </p>
        </div>
      <% end%>
    </div>
  </nav>
  </div>
  </div>
</header>