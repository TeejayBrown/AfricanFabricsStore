<%= form_with(url: search_index_path, class: 'd-flex', method: :get, local: true) do%>
  <%= text_field_tag(:q, nil, class: "form-control me-2", placeholder: 'Search For Products')%>
  <%= select_tag :category, options_from_collection_for_select(ProductCategory.all, :id, :name), class: "select", prompt: " All Categories " %>
  <%= submit_tag "Search!", class:"btn btn-outline-success" %>
<% end %>